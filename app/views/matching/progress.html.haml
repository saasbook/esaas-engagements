%h1
  Matching Progress for #{@matching.name}

%div.progress
  %div.progress-bar.bg-success{:style=>"width: 0.00%;", :aria_valuenow=>"0.00", :aria_valuemin=>"0", :aria_valuemax=>"100"}
    0.00%
%table.table.table-condensed#apps_table
  %thead
    %tr
    %th
      %h3
        Team Number
    %th
      %h3
        Coach
    %th
      %h3
        Students
    %th
      %h3
        Status
    %th
      %h3
        Start Date

  %tbody
    - @engagements.each do |e|
      %tr
        %td{:height => "70"}
          %span.badge.bg-primary.h4
            = e.team_number
        %td
          %span.badge.bg-dark.h4
            = User.find(e.coach_id).name
        %td
          - @students[e].each do |n|
            %span.badge.alert-primary.bg-light.text-dark.h4
              = n
        %td
          %span.badge.h4
            = Matching.engagement_status(@matching.last_edit_users[e.team_number])
        %td
          %span.badge.bg-white.text-dark.h4
            = e.start_date.strftime("%B %d, %Y")
